            xmlns:views="clr-namespace:Delta.Views"
            x:Class="Delta.MainPage">

    <TabBar>
        <Tab Icon="chartbar.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:DataPage}"
                Route="DataPage"/>
        </Tab>
        <Tab Icon="drugs.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:DrugPage}"
                Route="DrugPage"/>
        </Tab>
        <Tab Title="Test2">
            <ShellContent
                ContentTemplate="{DataTemplate views:ShowAllStepsPage}"
                Route="ShowAllStepsPage"/>
        </Tab>
    </TabBar>
</Shell>
